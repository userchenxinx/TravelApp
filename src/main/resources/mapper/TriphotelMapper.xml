<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinming.travelapp.mapper.TriphotelMapper">
   <select id="selectAll" resultType="map">
        select * from t_c_triphotel
   </select>

    <select id="findById" resultType="com.pinming.travelapp.pojo.Triphotel" parameterType="int">
        select * from t_c_triphotel where id=#{id}
    </select>

    <select id="selectByPrice" resultType="com.pinming.travelapp.pojo.Triphotel" parameterType="string">
        select * from t_c_triphotel order by price asc
    </select>

    <select id="selectByPriceDesc" resultType="com.pinming.travelapp.pojo.Triphotel" parameterType="string">
        select * from t_c_triphotel order by price desc
    </select>
</mapper>